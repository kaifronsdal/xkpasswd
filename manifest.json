{
  "manifest_version": 2,
  "name": "XKPasswd Generator",
  "version": "1.0",
  "description": "Generate secure passwords using xkpasswd algorithm",
  
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Generate Password",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "theme_icons": [
      {
        "light": "assets/icons/icon16-dark.png",
        "dark": "assets/icons/icon16.png",
        "size": 16
      },
      {
        "light": "assets/icons/icon48-dark.png", 
        "dark": "assets/icons/icon48.png",
        "size": 48
      },
      {
        "light": "assets/icons/icon128-dark.png",
        "dark": "assets/icons/icon128.png", 
        "size": 128
      }
    ]
  }
}